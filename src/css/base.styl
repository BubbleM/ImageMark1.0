@import "~bootstrap/dist/css/bootstrap.min.css";

/*视频背景*/
#content
  top: 0
  margin-top: -55px;
  height: 700px
  .bg_img
    position: relative
    /*保持视频按16:9的比例缩放*/
    width: 100%
    padding-bottom: 56.25%
    height: 0
    text-align: center
    .title
      position: absolute
      margin-left: 23%
      line-height: 700px
      font-size: 40px
      color: #fff
    .player
      width: 100%
      height:100%
      top: 0
      left: 0
      position: absolute
      overflow: hidden
      z-index: -9999

