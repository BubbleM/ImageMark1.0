@import "~bootstrap/dist/css/bootstrap.min.css";
body
  margin: 0
  .home
    color: #fff
    header
      position: absolute
      top: 0
      min-width: 100%
      height: 100px
      background: rgba(7, 17, 27, 0.2)
      img
        padding-top: 9px
      .nav
        position: absolute
        left: 300px
        top: 0
        height: 100%
        text-align: center
        .nav-item1
          width: 120px
          height: 100%
          line-height: 100px // 文字垂直居中
          border-right: 1px solid rgba(7,17,27,0.1)
          background: url("/src/img/sub_nav.png") repeat-x
          list-style-type: none
          float: left
          font-size: 18px
          font-weight: normal
    video
      position: fixed
      top: 0
      right: 0
      min-height: 100%
      min-width: 100%
      width: auto
      height: auto
      z-index: -9999
      //-webkit-filter:grayscale(100%) // 控制色调